        #table-reproduction {
            width: 26px;
            height: 26px;
        }

        #delete {
            width: 16px;
            height: 16px;
            padding-top: 2px;
        }

        #audio-a {
            margin-top: 4px;
        }

        #plus-a {
            margin-right: 12px;
        }

        #plus {
