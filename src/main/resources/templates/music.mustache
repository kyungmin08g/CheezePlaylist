        }

        th {
            color: #454545;
            text-transform: uppercase;
            font-size: 12px;
        }

        tbody tr {
            font-family: "Itim", cursive;
            font-weight: 400;
            font-style: normal;
            color: #515151;
        }

        tbody tr:hover {
            background-color: #cfcfcf;
        }

        tbody tr:hover td {
